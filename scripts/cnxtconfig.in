detect_mmx()
{
	if [ "@CNXTDRIVER@" = "hsf" ] && [ "@CNXTARCH@" = "i386" ] && [ -e /proc/cpuinfo ]; then
		grep -q '^flags.*\<mmx\>' /proc/cpuinfo
		return $?
	fi

	return 0
}

